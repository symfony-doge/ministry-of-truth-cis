version: '2'

services:
    app:
        build:
            context: .
            args:
                DEPLOYMENT_PATH: ${DEPLOYMENT_PATH}
                TIMEZONE: ${TIMEZONE}
                GOLANG_VERSION: ${GOLANG_VERSION}
                MYSTEM_VERSION: ${MYSTEM_VERSION}
        networks:
            back:
                aliases:
                    - ${APP_HOST_EXPOSE}
        ports:
            - "${APP_PORT_EXPOSE}:9595"
        volumes:
            - ${PWD}/var/logs/app:${DEPLOYMENT_PATH}/var/logs/app

networks:
    back:
        driver: bridge
